<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgragh"
    app:startDestination="@id/logInFragment">
    <fragment
        android:id="@+id/recipeListFragment"
        android:name="com.example.tal_mitzmacher_amit_mitzmacher_yuval_tal.ui.RecipeListFragment"
        android:label="RecipeListFragment" >
        <action
            android:id="@+id/action_recipeListFragment_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment" />
        <action
            android:id="@+id/action_recipeListFragment_to_addEditRecipeFragment"
            app:destination="@id/addEditRecipeFragment" />
        <action
            android:id="@+id/action_recipeListFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
        <action
            android:id="@+id/action_recipeListFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_recipeListFragment_to_logInFragment"
            app:destination="@id/logInFragment"
            app:popUpTo="@id/logInFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/addEditRecipeFragment"
        android:name="com.example.tal_mitzmacher_amit_mitzmacher_yuval_tal.ui.AddEditRecipeFragment"
        android:label="AddEditRecipeFragment" >
        <action
            android:id="@+id/action_addEditRecipeFragment_to_recipeListFragment"
            app:destination="@id/recipeListFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="com.example.tal_mitzmacher_amit_mitzmacher_yuval_tal.ui.RecipeDetailFragment"
        android:label="RecipeDetailFragment" >
        <action
            android:id="@+id/action_recipeDetailFragment_to_addEditRecipeFragment"
            app:destination="@id/addEditRecipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.tal_mitzmacher_amit_mitzmacher_yuval_tal.ui.FavoriteFragment"
        android:label="FavoriteFragment" >
        <action
            android:id="@+id/action_favoriteFragment_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.tal_mitzmacher_amit_mitzmacher_yuval_tal.ui.SearchFragment"
        android:label="SearchFragment" />
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.tal_mitzmacher_amit_mitzmacher_yuval_tal.ui.LogInFragment"
        android:label="LogInFragment" >
        <action
            android:id="@+id/action_logInFragment_to_recipeListFragment"
            app:destination="@id/recipeListFragment" />
        <action
            android:id="@+id/action_logInFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.tal_mitzmacher_amit_mitzmacher_yuval_tal.ui.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
    </fragment>
</navigation>